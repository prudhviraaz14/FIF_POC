        <creator-type>xslt</creator-type>
        <creator-params>
            <creator-param>
                <param-name>filename</param-name>
                <param-value>SLSCreateMobilePhoneDiscount.xsl</param-value>
            </creator-param>
        </creator-params>
    </message-creation>
    <message-parameters>
        <message-param>
            <param-name>transactionID</param-name>
            <param-mandatory>true</param-mandatory>
        </message-param>
        <message-param>
            <param-name>CLIENT_NAME</param-name>
            <param-mandatory>false</param-mandatory>
            <param-default-value>SLS</param-default-value>
        </message-param>
        <message-param>
            <param-name>CUSTOMER_NUMBER</param-name>
            <param-mandatory>true</param-mandatory>
        </message-param>
    </message-parameters>
    <response-handling>
        <return-warnings>false</return-warnings>
        <output-parameters/>
    </response-handling>
</action-mapping>
