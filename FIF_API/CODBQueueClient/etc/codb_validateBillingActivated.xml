<action-mapping>
    <action-name>validateBillingActivated</action-name>
    <message-creation>
        <creator-type>xslt</creator-type>
        <creator-params>
            <creator-param>
                <param-name>filename</param-name>
                <param-value>ValidateBillingActivated.xsl</param-value>
            </creator-param>
        </creator-params>
    </message-creation>
    <message-parameters>
        <message-param>
            <param-name>transactionID</param-name>
            <param-mandatory>true</param-mandatory>
        </message-param>
        <message-param>
            <param-name>OVERRIDE_SYSTEM_DATE</param-name>
            <param-mandatory>false</param-mandatory>
        </message-param>
		<message-param>
            <param-name>serviceSubscriptionId</param-name>
            <param-mandatory>true</param-mandatory>
        </message-param>
        <message-param>
            <param-name>clientName</param-name>
            <param-mandatory>false</param-mandatory>
            <param-default-value>CODB</param-default-value>
        </message-param>        
    </message-parameters>
    <response-handling>
		<return-warnings>false</return-warnings>
		<output-parameters>
			<output-param>
				<response-command-id>find_main_service</response-command-id>
				<response-param-name>service_found</response-param-name>
				<output-param-name>serviceFound</output-param-name>
			</output-param>
			<output-param>
				<response-command-id>find_main_service</response-command-id>
				<response-param-name>billing_activated</response-param-name>
				<output-param-name>billingActivated</output-param-name>
			</output-param>                    
		</output-parameters>
    </response-handling>
</action-mapping>
