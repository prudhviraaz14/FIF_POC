            <action-name>terminateEmptyProductSubscription</action-name>
            <message-creation>
                <creator-type>xslt</creator-type>
                <creator-params>
                    <creator-param>
                        <param-name>filename</param-name>
                        <param-value>TerminateEmptyProductSubscription.xsl</param-value>
                    </creator-param>
                </creator-params>
            </message-creation>
            <message-parameters>
                <message-param>
                    <param-name>transactionID</param-name>
                    <param-mandatory>true</param-mandatory>
                </message-param>
                <message-param>
                    <param-name>PRODUCT_SUBSCRIPTION_ID</param-name>
                    <param-mandatory>true</param-mandatory>
                </message-param>
                <message-param>
                    <param-name>EFFECTIVE_DATE</param-name>
