<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE messagecreator-metadata SYSTEM "messagecreator-metadata.dtd">

<!--
    This document contains the message metadata for the Test DatabaseClient.
    It contains information about the supported request, message, and message
    creator types.  It also contains the action mappings that specify which
    actions are supported.
-->

<messagecreator-metadata>

    <!-- Request definitions -->
    <request-definitions>
        <request-definition>
            <request-type>FIF</request-type>
            <request-class>net.arcor.fif.messagecreator.FIFRequest</request-class>
        </request-definition>
    </request-definitions>

    <!-- Message definitions -->
    <message-definitions>
        <message-definition>
            <message-type>FIF</message-type>
            <message-class>net.arcor.fif.messagecreator.FIFMessage</message-class>
        </message-definition>
    </message-definitions>

    <!-- Message Creator definitions -->
    <message-creator-definitions>
        <message-creator-definition>
            <creator-type>xsql</creator-type>
            <creator-class>net.arcor.fif.messagecreator.XSQLMessageCreator</creator-class>
            <creator-params>
                <creator-param>
                    <param-name>filename</param-name>
                </creator-param>
            </creator-params>
            <creator-input-request-type>FIF</creator-input-request-type>
            <creator-output-message-type>FIF</creator-output-message-type>
        </message-creator-definition>
        <message-creator-definition>
            <creator-type>xslt</creator-type>
            <creator-class>net.arcor.fif.messagecreator.XSLTMessageCreator</creator-class>
            <creator-params>
                <creator-param>
                    <param-name>filename</param-name>
                </creator-param>
            </creator-params>
            <creator-input-request-type>FIF</creator-input-request-type>
            <creator-output-message-type>FIF</creator-output-message-type>
        </message-creator-definition>
    </message-creator-definitions>

    <!-- Action Mappings-->
    <action-mappings>
      <!-- Modify Commisioning Information -->
        <action-mapping>
            <action-name>modifyCommisioningInformation</action-name>
            <message-creation>
                <creator-type>xslt</creator-type>
                <creator-params>
                    <creator-param>
                        <param-name>filename</param-name>
                        <param-value>ModifyCommisioningInformation.xsl</param-value>
                    </creator-param>
                </creator-params>
            </message-creation>
            <message-parameters>
                <message-param>
                    <param-name>transactionID</param-name>
                    <param-mandatory>true</param-mandatory>
                </message-param>
                <message-param>
                    <param-name>CONTRACT_NUMBER</param-name>
                    <param-mandatory>true</param-mandatory>
                </message-param>
                <message-param>
                    <param-name>CONTRACT_TYPE</param-name>
                    <param-mandatory>true</param-mandatory>
                </message-param>
                <message-param>
                    <param-name>CIO_TYPE</param-name>
                    <param-mandatory>false</param-mandatory>
                    <param-default-value>Initial CIO</param-default-value>
                </message-param>                
                <message-param>
                    <param-name>EFFECTIVE_DATE</param-name>
                    <param-mandatory>true</param-mandatory>
                </message-param>
                <message-param>
                    <param-name>NEW_CIO_DATA</param-name>
                    <param-mandatory>true</param-mandatory>
                </message-param>
                <message-param>
                    <param-name>CHANGE_REASON_RD</param-name>
                    <param-mandatory>false</param-mandatory>
                    <param-default-value>Correction</param-default-value>
                </message-param>
            </message-parameters>
            <response-handling>
               <return-warnings>false</return-warnings>
               <output-parameters/>
           </response-handling>
        </action-mapping>
