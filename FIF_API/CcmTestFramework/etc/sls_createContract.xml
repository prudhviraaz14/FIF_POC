<action-mapping>
	<action-name>createContract</action-name>
	<message-creation>
		<creator-type>xslt</creator-type>
		<creator-params>
			<creator-param>
				<param-name>filename</param-name>
				<param-value>SLSCreateContract.xsl</param-value>
			</creator-param>
		</creator-params>
	</message-creation>
	<message-parameters>
		<message-param>
			<param-name>transactionID</param-name>
			<param-mandatory>true</param-mandatory>
		</message-param>
		<message-param>
			<param-name>OVERRIDE_SYSTEM_DATE</param-name>
			<param-mandatory>false</param-mandatory>
		</message-param>
		<message-param>
			<param-name>clientName</param-name>
			<param-mandatory>false</param-mandatory>
			<param-default-value>SLS</param-default-value>
		</message-param>

		<message-param>
			<param-name>customerNumber</param-name>
			<param-mandatory>true</param-mandatory>
			<param-validation-method>validateRegularExpression</param-validation-method>
		</message-param>
		<message-param>
			<param-name>contractNumber</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateRegularExpression</param-validation-method>
		</message-param>
		<message-param>
			<param-name>skeletonContractNumber</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateRegularExpression</param-validation-method>
		</message-param>

		<message-param>
			<param-name>contractType</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateRegularExpression</param-validation-method>
		</message-param>
		<message-param>
			<param-name>createContract</param-name>
			<param-mandatory>false</param-mandatory>
			<param-default-value>Y</param-default-value>
			<param-validation-method>validateCCMIndicator</param-validation-method>
		</message-param>
		<message-param>
			<param-name>createProductCommitment</param-name>
			<param-mandatory>false</param-mandatory>
			<param-default-value>Y</param-default-value>
			<param-validation-method>validateCCMIndicator</param-validation-method>
		</message-param>

		<message-param>
			<param-name>name</param-name>
			<param-mandatory>false</param-mandatory>
		</message-param>
		<message-param>
			<param-name>currencyRd</param-name>
			<param-mandatory>false</param-mandatory>
		</message-param>
		<message-param>
			<param-name>languageRd</param-name>
			<param-mandatory>false</param-mandatory>
		</message-param>
		<message-param>
			<param-name>loiIndicator</param-name>
			<param-mandatory>false</param-mandatory>
		</message-param>

		<message-param>
			<param-name>productCode</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateRegularExpression</param-validation-method>
		</message-param>
		<message-param>
			<param-name>pricingStructureCode</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateRegularExpression</param-validation-method>
		</message-param>
		
		<message-param-list>
			<param-list-name>productCommitmentList</param-list-name>
			<param-list-mandatory>false</param-list-mandatory>
			<message-param>
				<param-name>productCode</param-name>
				<param-mandatory>true</param-mandatory>
				<param-validation-method>validateRegularExpression</param-validation-method>
			</message-param>
			<message-param>
				<param-name>pricingStructureCode</param-name>
				<param-mandatory>true</param-mandatory>
				<param-validation-method>validateRegularExpression</param-validation-method>
			</message-param>
		</message-param-list>
		
		<!-- parameters for signatures -->
		<message-param>
			<param-name>boardSignName</param-name>
			<param-mandatory>false</param-mandatory>
			<param-default-value>Vodafone</param-default-value>
		</message-param>
		<message-param>
			<param-name>boardSignDate</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateCCBDate</param-validation-method>
		</message-param>
		<message-param>
			<param-name>primaryCustSignName</param-name>
			<param-mandatory>false</param-mandatory>
			<param-default-value>Kunde</param-default-value>
		</message-param>
		<message-param>
			<param-name>primaryCustSignDate</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateCCBDate</param-validation-method>
		</message-param>
		<message-param>
			<param-name>secondaryCustSignName</param-name>
			<param-mandatory>false</param-mandatory>
		</message-param>
		<message-param>
			<param-name>secondaryCustSignDate</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateCCBDate</param-validation-method>
		</message-param>
		
		<!-- contract conditions -->
		<message-param>
			<param-name>minPeriodDurationValue</param-name>
			<param-mandatory>false</param-mandatory>
			<param-default-value>24</param-default-value>
			<param-validation-method>validateRegularExpression</param-validation-method>
		</message-param>
		<message-param>
			<param-name>minPeriodDurationUnit</param-name>
			<param-mandatory>false</param-mandatory>
			<param-default-value>MONTH</param-default-value>
			<param-validation-method>validateRegularExpression</param-validation-method>
		</message-param>
		<message-param>
			<param-name>minPeriodStartDate</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateCCBDate</param-validation-method>
		</message-param>
		<message-param>
			<param-name>autoExtentPeriodValue</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateRegularExpression</param-validation-method>
		</message-param>
		<message-param>
			<param-name>autoExtentPeriodUnit</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateRegularExpression</param-validation-method>
		</message-param>
		<message-param>
			<param-name>autoExtensionInd</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateCCMIndicator</param-validation-method>
		</message-param>
		<message-param>
			<param-name>salesOrganisationNumber</param-name>
			<param-mandatory>false</param-mandatory>
		</message-param>
		<message-param>
			<param-name>salesOrganisationNumberVF</param-name>
			<param-mandatory>false</param-mandatory>
		</message-param>
		<message-param>
			<param-name>noticePeriodDurationValue</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateRegularExpression</param-validation-method>
		</message-param>
		<message-param>
			<param-name>noticePeriodDurationUnit</param-name>
			<param-mandatory>false</param-mandatory>
			<param-validation-method>validateRegularExpression</param-validation-method>
		</message-param>
		<message-param>
			<param-name>terminationRestriction</param-name>
			<param-mandatory>false</param-mandatory>
		</message-param>
		
		<!-- parameters for creating contacts -->
		<message-param>
			<param-name>createContact</param-name>
			<param-mandatory>false</param-mandatory>
			<param-default-value>Y</param-default-value>
			<param-validation-method>validateCCMIndicator</param-validation-method>
		</message-param>
		<message-param>
			<param-name>contactTypeRd</param-name>
			<param-mandatory>false</param-mandatory>
		</message-param>
		<message-param>
			<param-name>shortDescription</param-name>
			<param-mandatory>false</param-mandatory>
		</message-param>
		<message-param>
			<param-name>longDescriptionText</param-name>
			<param-mandatory>false</param-mandatory>
		</message-param>
		
	</message-parameters>
	<response-handling>
		<return-warnings>false</return-warnings>
		<output-parameters>
			<output-param>
				<response-command-id>create_contract</response-command-id>
				<response-param-name>contract_number</response-param-name>
				<output-param-name>contractNumber</output-param-name>
			</output-param>
			<output-param>
				<response-command-id>add_product_commitment_1</response-command-id>
				<response-param-name>product_commitment_number</response-param-name>
				<output-param-name>productCommitmentNumber</output-param-name>
			</output-param>
		</output-parameters>
	</response-handling>
</action-mapping>
