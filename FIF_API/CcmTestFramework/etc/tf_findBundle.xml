<action-mapping>
    <action-name>findBundle</action-name>
    <message-creation>
        <creator-type>xslt</creator-type>
        <creator-params>
            <creator-param>
                <param-name>filename</param-name>
                <param-value>FindBundle.xsl</param-value>
            </creator-param>
        </creator-params>
    </message-creation>
    <message-parameters>
        <message-param>
            <param-name>transactionID</param-name>
            <param-mandatory>true</param-mandatory>
        </message-param>
        <message-param>
            <param-name>OVERRIDE_SYSTEM_DATE</param-name>
            <param-mandatory>false</param-mandatory>
        </message-param>
        <message-param>
            <param-name>clientName</param-name>
            <param-mandatory>false</param-mandatory>
            <param-default-value>CODB</param-default-value>
        </message-param>
        <message-param>
            <param-name>requestListId</param-name>
            <param-mandatory>false</param-mandatory>
        </message-param>
        <message-param>
            <param-name>customerNumber</param-name>
            <param-mandatory>true</param-mandatory>
        </message-param>
        <message-param>
            <param-name>OMTSOrderID</param-name>
            <param-mandatory>true</param-mandatory>
        </message-param>
        <message-param>
            <param-name>orderPositionNumber</param-name>
            <param-mandatory>true</param-mandatory>
        </message-param>
        <message-param-list>
            <param-list-name>serviceList</param-list-name>
            <param-list-mandatory>false</param-list-mandatory>
            <message-param>
                <param-name>serviceSubscriptionId</param-name>
                <param-mandatory>true</param-mandatory>
            </message-param>
        </message-param-list>                
    </message-parameters>
    <response-handling>
        <return-warnings>false</return-warnings>
        <output-parameters/>                 
    </response-handling>
</action-mapping>
