<action-mapping>
        <action-name>createWhsCustomer</action-name>
        <message-creation>
                <creator-type>xslt</creator-type>
                <creator-params>
                        <creator-param>
                                <param-name>filename</param-name>
                                <param-value>CreateCustomer.xsl</param-value>
                        </creator-param>
                </creator-params>
        </message-creation>
        <!--Create Entity Mappings-->
        <message-parameters>
                <message-param>
                        <param-name>transactionID</param-name>
                        <param-mandatory>true</param-mandatory>
                </message-param>
                <message-param>
                        <param-name>clientName</param-name>
                        <param-mandatory>false</param-mandatory>
                        <param-default-value>OPM</param-default-value>
                </message-param>
                <message-param>
                        <param-name>WHOLESALE_PARTNER</param-name>
                        <param-mandatory>true</param-mandatory>
                </message-param>
                <message-param>
                        <param-name>PERSON.SalutationDescription</param-name>
                        <param-mandatory>false</param-mandatory>
                </message-param>
                <message-param>
                        <param-name>PERSON.TitleDescription</param-name>
                        <param-mandatory>false</param-mandatory>
                </message-param>
                <message-param>
                        <param-name>PERSON.Forename</param-name>
                        <param-mandatory>false</param-mandatory>
                </message-param>
                <message-param>
                        <param-name>PERSON.Name</param-name>
                        <param-mandatory>false</param-mandatory>
                </message-param>
                <message-param>
                        <param-name>ORGANISATION.Name</param-name>
                        <param-mandatory>false</param-mandatory>
                </message-param>
                <message-param>
                        <param-name>ORGANISATION.ContactName</param-name>
                        <param-mandatory>false</param-mandatory>
                </message-param>
                <!-- Create Address Mapping-->
                <message-param>
                        <param-name>streetName</param-name>
                        <param-mandatory>false</param-mandatory>
                        <param-default-value>Rellinghauser Str.</param-default-value>
                </message-param>
                <message-param>
                        <param-name>streetNumber</param-name>
                        <param-mandatory>false</param-mandatory>
                        <param-default-value>27</param-default-value>
                </message-param>
                <message-param>
                        <param-name>postalCode</param-name>
                        <param-mandatory>false</param-mandatory>
                        <param-default-value>45128</param-default-value>
                </message-param>
                <message-param>
                        <param-name>cityName</param-name>
                        <param-mandatory>false</param-mandatory>
                        <param-default-value>Essen</param-default-value>
                </message-param>
                <!-- Create Customer Mapping-->
                <message-param>
                        <param-name>CUSTOMER.CustomerInternalRefNumber</param-name>
                        <param-mandatory>false</param-mandatory>
                </message-param>
                <!-- Create Affinity Group Mapping-->
                <message-param>
                        <param-name>accountOutputDevice</param-name>
                        <param-mandatory>false</param-mandatory>
                        <param-default-value>NO_FEE</param-default-value>
                </message-param>
                <message-param>
                        <param-name>createAccountIndicator</param-name>
                        <param-mandatory>false</param-mandatory>
                        <param-default-value>Y</param-default-value>
                </message-param>
                <message-param>
                        <param-name>languageRd</param-name>
                        <param-mandatory>false</param-mandatory>
                        <param-default-value>ger</param-default-value>
                </message-param>
                <message-param>
                        <param-name>currencyRd</param-name>
                        <param-mandatory>false</param-mandatory>
                        <param-default-value>EUR</param-default-value>
                </message-param>                                
        </message-parameters>
        <response-handling>
                <return-warnings>false</return-warnings>
                <output-parameters>
                        <output-param>
                                <response-command-id>create_customer_1</response-command-id>
                                <response-param-name>customer_number</response-param-name>
                                <output-param-name>CUSTOMER_NUMBER</output-param-name>
                        </output-param>
                </output-parameters>
        </response-handling>
</action-mapping>
