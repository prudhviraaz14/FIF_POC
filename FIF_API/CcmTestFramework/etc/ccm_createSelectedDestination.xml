    <!-- Create selected destination -->
    <action-mapping>
        <action-name>createSelectedDestination</action-name>
        <message-creation>
            <creator-type>xslt</creator-type>
            <creator-params>
                <creator-param>
                    <param-name>filename</param-name>
                    <param-value>CcmCreateSelectedDestinations.xsl</param-value>
                </creator-param>
            </creator-params>
        </message-creation>
        <message-parameters>
            <message-param>
                <param-name>transactionID</param-name>
                <param-mandatory>true</param-mandatory>
            </message-param>
            <message-param>
                <param-name>dependentTransactionID</param-name>
                <param-mandatory>false</param-mandatory>
                </message-param>
            <message-param>
                <param-name>PRODUCT_SUBSCRIPTION_ID</param-name>
                <param-mandatory>true</param-mandatory>
            </message-param>
            <message-param>
                <param-name>CUSTOMER_NUMBER</param-name>
                <param-mandatory>true</param-mandatory>
            </message-param>
            <message-param>
                <param-name>USER_NAME</param-name>
                <param-mandatory>false</param-mandatory>
            </message-param>
            <message-param>
                <param-name>START_DATE</param-name>
                <param-mandatory>true</param-mandatory>
            </message-param> 
            <message-param>
                <param-name>CLIENT_NAME</param-name>
                <param-mandatory>false</param-mandatory>
                <param-default-value>CCM</param-default-value>
            </message-param>                               
            <message-param-list>
                <param-list-name>SELECTED_DESTINATIONS_LIST</param-list-name>
                <param-list-mandatory>false</param-list-mandatory>
                <message-param>
                    <param-name>BEGIN_NUMBER</param-name>
                    <param-mandatory>true</param-mandatory>
                </message-param>
            </message-param-list>                                
        </message-parameters>
        <response-handling>
            <return-warnings>false</return-warnings>
            <output-parameters/>
        </response-handling>
    </action-mapping>
