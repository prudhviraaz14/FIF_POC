<action-mapping>
    <action-name>cloneAccount</action-name>
    <message-creation>
        <creator-type>xslt</creator-type>
        <creator-params>
            <creator-param>
                <param-name>filename</param-name>
                <param-value>CloneAccount.xsl</param-value>
            </creator-param>
        </creator-params>
    </message-creation>
    <message-parameters>
        <message-param>
            <param-name>transactionID</param-name>
            <param-mandatory>true</param-mandatory>
        </message-param>
   		<message-param>
			<param-name>OVERRIDE_SYSTEM_DATE</param-name>
			<param-mandatory>false</param-mandatory>
		</message-param>
        <message-param>
            <param-name>clientName</param-name>
            <param-mandatory>false</param-mandatory>
            <param-default-value>SLS</param-default-value>
        </message-param>
        <message-param>
            <param-name>desiredDate</param-name>
            <param-mandatory>false</param-mandatory>
        </message-param>
        <message-param>
            <param-name>accountNumber</param-name>
            <param-mandatory>true</param-mandatory>
        </message-param>
    </message-parameters>
    <response-handling>
        <return-warnings>false</return-warnings>
        <output-parameters/>
    </response-handling>
</action-mapping>
