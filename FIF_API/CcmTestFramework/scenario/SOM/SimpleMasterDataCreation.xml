 <customerData>
    <customer ID="customer" >
        <ccbId type="C">
            <existing>{customerNumber}</existing>
        </ccbId>
        <changeType>ADD</changeType>
      <individual ID="individual">
        <changeType>ADD</changeType>
        <salutation>
        	<configured>{salutation}</configured>
        </salutation>
        <titleDescription>
        	<configured>{titleDescription}</configured>
        </titleDescription>
        <nobilityPrefixDescription>
        	<configured>{nobilityPrefixDescription}</configured>
        </nobilityPrefixDescription>
        <forename>
        	<configured>{forename}</configured>
        </forename>
        <surnamePrefix>
        	<configured>{surnamePrefix}</configured>
        </surnamePrefix>
        <name>
          <configured>{name}</configured>
        </name>
        <birthDate>
          <configured>{birthDate}</configured>
        </birthDate>
        <address>
          <configured>
            <city>{city}</city>
            <postalCode>{postalCode}</postalCode>
            <street>{street}</street>
            <streetNumber>{streetNumber}</streetNumber>
            <streetNumberSuffix/>
            <postOfficeBox/>
            <additionalAddressDescription/>
            <secondAdditionalAddressDescription/>
              <country>DE</country>
          </configured>
        </address>
        <accessInformation>
          <configured>
            <accessInformationType>STD</accessInformationType>
            <contactName>{contactName}</contactName>
            <phoneNumber>{phoneNumber}</phoneNumber>
            <faxNumber>{faxNumber}</faxNumber>
            <mobileNumber>{mobileNumber}</mobileNumber>
            <emailAddress>{emailAddress}</emailAddress>
            <electronicContactIndicator>true</electronicContactIndicator>
          </configured>
        </accessInformation>
      </individual>
      <classification>
      	<configured>{classification}</configured>
      </classification>
      <userPassword>
        <configured>userPassword</configured>
      </userPassword>
      <matchCodeId>
        <configured>matchCodeId</configured>
      </matchCodeId>
      <customerGroup>
        <configured>81</configured>
      </customerGroup>
      <customerInternalRefNumber>
        <configured>123</configured>
      </customerInternalRefNumber>
      <customerCategory>
      	<configured>{customerCategory}</configured>
      </customerCategory>
      <riskCategory>
        <configured/>
      </riskCategory>
      <marketingPhoneIndicator>
        <configured>{marketingIndicator}</configured>
      </marketingPhoneIndicator>
      <marketingMailIndicator>
        <configured>{marketingIndicator}</configured>
      </marketingMailIndicator>
      <marketingFaxIndicator>
        <configured>{marketingIndicator}</configured>
      </marketingFaxIndicator>
      <marketingUseDataIndicator>
        <configured>{marketingIndicator}</configured>
      </marketingUseDataIndicator>
      <marketingAuthorizationDate>
        <configured>{marketingAuthorizationDate}</configured>
      </marketingAuthorizationDate>
    </customer>
    <billingAccount ID="account"  ownerNodeRefID="customer">
        <ccbId type="A">
            <existing>{accountNumber}</existing>
        </ccbId>
        <changeType>ADD</changeType>
      <mailing>
        <mailingName>
          <configured>{mailingName}</configured>
        </mailingName>
      </mailing>
      <invoiceDelivery>
        <invoiceDeliveryType>
          <configured>WEBBILL</configured>
        </invoiceDeliveryType>
        <enableItemizedBill>
          <configured>electronic</configured>
        </enableItemizedBill>
        <maskingDigits>
          <configured>1</configured>
        </maskingDigits>
      </invoiceDelivery>
        <methodOfPayment>
            <paymentMethod>
            	<configured>{paymentMethod}</configured>
            </paymentMethod>
            <bankCode>
              <configured>{bankCode}</configured>
            </bankCode>
            <bankName>
              <configured>{bankName}</configured>
            </bankName>
            <bankAccountNumber>
              <configured>{bankAccountNumber}</configured>
            </bankAccountNumber>
            <owner>
                <configured>{BankAccountOwner}</configured>
            </owner>
            <directDebitAuthorizationDate>
              <configured>{directDebitAuthorizationDate}</configured>
            </directDebitAuthorizationDate>
        </methodOfPayment>
    </billingAccount>
  </customerData>
